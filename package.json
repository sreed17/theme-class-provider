{
    "name": "theme-class-provider",
    "version": "1.0.0",
    "description": "React library providing a ThemeProvider based on a list of class provided.",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "private": "false",
    "scripts": {
        "build": "rollup --config rollup.config.ts --configPlugin typescript",
        "test": "jest",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "lint:tsc": "tsc",
        "docs:api": "typedoc --out docs/api src",
        "docs:components": "react-docgen src/**/*.tsx docs/components.json",
        "docs": "npm run docs:api && npm run docs:components",
        "commit": "git add . && cz"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sreed17/theme-class-provider"
    },
    "bugs": {
        "url": "https://github.com/sreed17/theme-class-provider/issues"
    },
    "author": "Sreekanth D",
    "license": "MIT",
    "keywords": [
        "react",
        "typescript",
        "theme",
        "provider",
        "CSS"
    ],
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.6",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.2",
        "@types/jest": "^29.5.12",
        "@types/react": "^18.2.71",
        "@types/react-dom": "^18.2.22",
        "@types/rollup-plugin-peer-deps-external": "^2.2.5",
        "@typescript-eslint/eslint-plugin": "^7.4.0",
        "@typescript-eslint/parser": "^7.4.0",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-tsdoc": "^0.2.17",
        "immer": "^10.0.4",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "3.2.5",
        "react": "^18.2.0",
        "react-docgen": "^7.0.3",
        "react-dom": "^18.2.0",
        "rollup": "^4.13.1",
        "rollup-plugin-dts": "^6.1.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "ts-jest": "^29.1.2",
        "tslib": "^2.6.2",
        "tslint-config-prettier": "^1.18.0",
        "typedoc": "^0.25.12",
        "typescript": "^5.4.3"
    },
    "peerDependencies": {
        "immer": "^10.0.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
