{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig to read more about this file */

        "target": "ES2021",
        "module": "commonjs",
        "jsx": "react",
        "outDir": "./dist",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist", "test"]
}
